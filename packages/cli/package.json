    "ts-loader": "^9.2.6",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.5",
    "typescript": "^4.4.3",
    "webpack": "^5.56.1",
    "webpack-dev-server": "^4.3.0"
  },
