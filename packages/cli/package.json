{
  "name": "@brikl/blocks-cli",
  "version": "1.0.0",
  "description": "Create a custom storefront on BRIKL with JavaScript/TypeScript, React and Next.js. This command line tool generates the React app based on the storefront template",
  "contributors": [
    {
      "name": "Tanis P",
      "email": "tanis@brikl.com",
      "url": "https://github.com/pankace"
    }
  ],
  "license": "MIT",
  "repository": "https://github.com/Brikl/blocks",
  "homepage": "https://github.com/Brikl/blocks",
  "bugs": "https://github.com/Brikl/blocks/issues",
  "keywords": [
    "BRIKL",
    "BRIKL Storefront"
  ],
  "main": "./lib/index.js",
  "bin": {
    "blocks": "./bin/blocks.js"
  },
  "scripts": {
    "build": "yarn run clean:some && tsc -p .",
    "global": "npm i -g && cli-blocks",
    "start": "npm run build && npm run global",
    "refresh": "npm run clean:all && npm install",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details"
  },
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
