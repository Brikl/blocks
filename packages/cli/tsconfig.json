{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ES6", "ES2015", "ESNext"],
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node", "inquirer", "figlet", "fs-extra"],
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}