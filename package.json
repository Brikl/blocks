{
  "name": "blocks",
  "version": "1.0.0",
  "description": "Libraries for building custom storefronts with BRIKL",
  "repository": "https://github.com/Brikl/blocks",
  "author": "Phumrapee Limpianchop <contact@rayriffy.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,gql,graphql,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build:modules": "yarn build:js && yarn build:react",
    "build:next": "yarn build:modules && cd examples/with-nextjs && yarn && yarn build && cd ../..",
    "build:js": "yarn workspace @brikl/storefront-js build",
    "build:react": "yarn workspace @brikl/storefront-react build",
    "dev:next": "yarn workspace @brikl/next dev",
    "dev:js": "yarn workspace @brikl/storefront-js dev",
    "dev:react": "yarn workspace @brikl/storefront-react dev",
    "publish:js": "yarn workspace @brikl/storefront-js publish",
    "publish:react": "yarn workspace @brikl/storefront-react publish"
  },
  "devDependencies": {
    "esbuild-node-externals": "^1.3.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "react": "^17.0.2"
  },
  "peerDependencies": {
    "react": ">= 16.0.0"
  }
}
